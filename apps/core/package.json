{
	"name": "core",
	"version": "0.0.1",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:unit": "jest --testMatch='<rootDir>/test/unit/**/*spec.ts' --verbose --coverage",
		"test:unit:debug": "node --inspect-brk=0.0.0.0:9229 -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --testMatch='<rootDir>/test/unit/**/*spec.ts'",
		"test:watch": "jest --watchAll",
		"test:cov": "jest --coverage --verbose",
		"test:debug": "node --inspect-brk=0.0.0.0:9229 -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migrate": "mikro-orm migration:up"
	},
	"dependencies": {
		"@nestjs/axios": "^4.0.0",
		"@nestjs/common": "^11.1.6",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.6",
		"@nestjs/platform-express": "^11.1.6",
		"@nestjs/swagger": "^11.2.0",
		"axios": "^1.7.9",
		"bcrypt": "^6.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cpf-cnpj-validator": "^1.0.3",
		"currency-codes": "^2.2.0",
		"decimal.js": "^10.5.0",
		"joi": "18.0.0",
		"pg": "^8.13.1",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1",
		"ts-pattern": "^5.8.0",
		"tsx": "^4.19.2",
		"uuid": "^11.0.5"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.4.0",
		"@nestjs/cli": "^11.0.2",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.1.6",
		"@types/bcrypt": "^6.0.0",
		"@types/express": "^5.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.2.1",
		"@types/supertest": "^6.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"add": "^2.0.6",
		"eslint": "^8.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"jest": "^29.7.0",
		"nock": "^14.0.1",
		"prettier": "^3.0.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "5.8.3",
		"zod": "^4.0.17"
	}
}
